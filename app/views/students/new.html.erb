<%= form_tag students_path do %>


  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_nam,nil,placeholder: @placeholder_name) %>

  <%= label_tag(:course_name, "Major") %>
  <%= text_field_tag(:course_name, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level,nil,placeholder: @placeholder_grade) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>


